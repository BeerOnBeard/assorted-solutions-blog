<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= config.title %></title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <%- css('css/so-fresh.css') %>
  </head>
  <body>
    <div class="header">
      <div class="nav">
        <div class="nav--item">
          <a href="<%- theme.logo_url %>"><%- image_tag(theme.logo) %></a>
        </div>
        <div class="nav--item">
          <a href="<%- config.root %>">HOME</a>
        </div>
      </div>
    </div>
    <div class="main">
      <%- body %>
    </div>
    <div class="footer">
      <div>&copy; <%= date(Date.now(), 'YYYY') %> <%= config.author %></div>
      <div>Powered by <a href="https://hexo.io/">Hexo.io</a></div>
    </div>
  </body>
</html>