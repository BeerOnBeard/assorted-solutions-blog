<% page.posts.each(function(post) { %>
  <div class="post">
    <a href="<%= url_for(post.path) %>">
      <div class="post__date"><%= date(post.date, config.date_format) %></div>
      <h2><%= post.title %></h2>
      <div class="growing-line"></div>
      <p><%- post.excerpt || truncate(strip_html(post.content), { length: 200 }) %></p>
    </a>
  </div>
<% }) %>